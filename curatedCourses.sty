%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%
%  Definition box
%  Usage: \begin{defn} Definition: "your text goes here" \end{defn}
%
\newtcolorbox{defn}{before upper=\textbf{Definition: },
colframe=sblue,colback=white,boxrule=0.25mm, leftrule=3mm, coltext=sbase03}

%
%  Definition box - no word
%  Usage: \begin{defn} your text goes here \end{defn}
%
\newtcolorbox{subdefn}{
colframe=sblue,colback=white,boxrule=0.25mm, leftrule=3mm, coltext=sbase03}

%
%  Example box
%  Usage: \begin{ex} Example goes here \end{ex}
%
\newtcolorbox{ex}{
colframe=sgreen, bottomrule=1pt, rightrule=0pt, leftrule=0pt, titlerule=0em, colback=white, coltitle=white, coltext=sbase03, 
}

%
%  Example box with word
%  Usage: \begin{ex} Example "your text goes here \end{ex}
%

%
\newtcolorbox{ex2}{before upper=\textbf{Example: \\},
colframe=sgreen, bottomrule=1pt, rightrule=0pt, leftrule=0pt, titlerule=0em, colback=white, coltitle=white, coltext=sbase03, 
}

%
% Theorem
%  Usage: \begin{thm}{Theorem Titles goes here} Theorem goes here \end{thm}
%
\newtcolorbox{thm}[2][]{colback=white,
colframe=sred,fonttitle=\bfseries, coltitle=white,
colbacktitle=sred,enhanced,coltext=sbase03,
attach boxed title to top center={yshift=-2mm},
title=#2,#1}

